{
  "extends": ["stylelint-config-standard-scss", "stylelint-config-clean-order"],
  "ignoreFiles": ["dist/**"],
  "rules": {
    "selector-class-pattern": null,
    "selector-pseudo-class-no-unknown": [
      true,
      {
        "ignorePseudoClasses": ["global", "local"]
      }
    ],
    "scss/dollar-variable-pattern": null
  }
}
