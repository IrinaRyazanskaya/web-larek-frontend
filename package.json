{
	"name": "web-larek-frontend",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"start": "webpack serve",
		"watch": "webpack --watch",
		"build": "webpack --mode=production --node-env=production",
		"build:dev": "webpack --mode=development",
		"build:prod": "webpack --mode=production --node-env=production",
		"format": "prettier --write .",
		"lint": "npm run lint:ts && npm run lint:styles",
		"lint:ts": "eslint .",
		"lint:styles": "stylelint '**/*.{css,scss}'",
		"lint-fix": "npm run lint-fix:ts && npm run lint-fix:styles",
		"lint-fix:ts": "eslint --fix .",
		"lint-fix:styles": "stylelint --fix '**/*.{css,scss}'"
	},
	"devDependencies": {
		"@babel/core": "^7.0.0",
		"@babel/preset-env": "^7.0.0",
		"@eslint/js": "^9.0.0",
		"@webpack-cli/generators": "^3.0.0",
		"autoprefixer": "^10.0.0",
		"babel-loader": "^10.0.0",
		"css-loader": "^7.0.0",
		"dotenv": "^17.0.0",
		"eslint": "^9.0.0",
		"globals": "^16.0.0",
		"html-webpack-plugin": "^5.0.0",
		"mini-css-extract-plugin": "^2.0.0",
		"postcss": "^8.0.0",
		"postcss-loader": "^8.0.0",
		"prettier": "^3.0.0",
		"resolve-url-loader": "^5.0.0",
		"sass": "^1.0.0",
		"sass-loader": "^16.0.0",
		"style-loader": "^4.0.0",
		"stylelint": "^16.0.0",
		"stylelint-config-clean-order": "^7.0.0",
		"stylelint-config-standard-scss": "^16.0.0",
		"terser-webpack-plugin": "^5.0.0",
		"ts-loader": "^9.0.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"webpack": "^5.0.0",
		"webpack-cli": "^6.0.0",
		"webpack-dev-server": "^5.0.0"
	}
}
